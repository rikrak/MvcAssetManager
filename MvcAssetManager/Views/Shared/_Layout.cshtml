@using RonnieOverby.MvcAssetManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @Html.RequireStyleBundlesForLayout("~/Content/css")
    @Html.RenderRequiredStyles()
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @RenderBody()

    @Html.RequireScriptBundlesForLayout("~/bundles/jquery")
    @Html.RenderRequiredScripts()
</body>
</html>
